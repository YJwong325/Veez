<!DOCTYPE html>

<html data-theme="autumn">
    <head>
        <title>Veez</title>

        <link rel="stylesheet" href="/css/main.css" />
    </head>

    <body>
        <div class="container mx-auto my-10 px-20">
            <div class="hero bg-base-200 min-h-64 rounded-lg">
                <div class="hero-content text-center w-full">
                    <div class="max-w-xl">
                        <h1 class="text-6xl text-base-content font-bold">Manga</h1>
                        <p class="pt-6 text-base-content">Explore my favorite fictional work and browse a collection of stories I love.</p>
                        <p class="pb-4 text-base-content">Select a category below to get started.</p>
                        <a href="/manga" class="btn btn-primary">Manga</a>
                        <a href="/anime" class="btn btn-primary">Anime</a>
                        <a href="/manhwa" class="btn btn-primary">Manhwa</a>
                    </div>
                </div>
            </div>

            <br><br>

            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
                <% mangas.forEach((manga) => { %>
                    <div class="card bg-base-100 shadow-xl">
                        <figure class="aspect-[3/4] overflow-hidden">
                            <img
                                class="w-full h-full object-cover"
                                src="<%= manga.coverImage.large %>"
                                alt="manga cover image" />
                        </figure>
                        <div class="card-body">
                            <h2 class="card-title"><%= manga.title.english %></h2>
                            <div class="card-actions justify-start">
                                <button class="btn btn-primary">Learn more</button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </body>
</html>